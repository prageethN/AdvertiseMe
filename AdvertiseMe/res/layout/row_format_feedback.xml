<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@color/white" android:orientation="vertical"
	android:padding="5dip" android:id="@+id/layoutProductDetailFeatures">
	<LinearLayout android:id="@+id/thumbnail"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:padding="3dip" android:layout_alignParentLeft="true"		
		android:layout_marginRight="5dip">

		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/ic_review_positive" android:id="@+id/list_image"/>

	</LinearLayout>
	<TextView android:layout_marginTop="5dip" android:textSize="12sp"
		android:text="@string/about_intro" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:maxLines="3"
		android:textColor="@color/back_gray" android:singleLine="false"
		android:id="@+id/text1" android:layout_toRightOf="@+id/thumbnail"></TextView>

	<TextView android:layout_marginTop="5dip" android:textSize="12sp"
		android:text="by Jack Sparrow" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:maxLines="3"
		android:textColor="@color/back_gray" android:singleLine="false"
		android:id="@+id/text2" android:layout_toRightOf="@+id/thumbnail"
		android:layout_below="@+id/text1"></TextView>


	<TextView android:layout_marginTop="10dip" android:textSize="12sp"
		android:text="Sep 17, 2012" android:layout_alignParentRight="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textColor="@color/back_gray" 
		android:id="@+id/text3" android:layout_below="@+id/text2"></TextView>

</RelativeLayout>
