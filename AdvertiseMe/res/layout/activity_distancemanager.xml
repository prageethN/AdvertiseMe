<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >
    <LinearLayout style="@style/TitleBar">
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="@string/description_home"
            android:src="@drawable/title_home"
            android:onClick="onClickHome" />

        <ImageView style="@style/TitleBarSeparator" />
        <TextView style="@style/TitleBarText" />
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="@string/description_about"
            android:src="@drawable/title_about"
            android:onClick="onClickAbout" />
        <ImageButton style="@style/TitleBarAction"
            android:contentDescription="@string/description_search"
            android:src="@drawable/title_search"
            android:onClick="onClickSearch" />
    </LinearLayout>

<TextView android:layout_margin="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textStyle="bold" android:text="Select Buffer Distance" android:textColor="@color/back_gray"/>

<RadioGroup android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:id="@+id/QueGroup1">
<RadioButton android:checked="false" 
android:id="@+id/option1" android:text="  5 KM DISTANCE" android:textColor="@color/back_gray"/>
<RadioButton android:checked="false" 
android:id="@+id/option2" android:text="  10 KM DISTANCE" android:textColor="@color/back_gray"/>
<RadioButton android:checked="false" 
android:id="@+id/option3" android:text="  15 KM DISTANCE" android:textColor="@color/back_gray"/>
<RadioButton android:checked="false" 
android:id="@+id/option4" android:text="  20 KM DISTANCE" android:textColor="@color/back_gray"/>
</RadioGroup>
<TableLayout android:layout_width="fill_parent"
android:layout_height="wrap_content"  android:weightSum="100">

<TableRow>

<Button android:layout_weight="30" android:layout_width="wrap_content" android:layout_margin="10dip"
android:layout_height="wrap_content" android:text="Show Locations" android:id="@+id/selected"/>
</TableRow>
</TableLayout>
</LinearLayout>
