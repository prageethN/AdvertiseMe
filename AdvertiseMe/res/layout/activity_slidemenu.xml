<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="match_parent" android:weightSum="100"
	android:background="@android:color/white">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_weight="30" android:background="@color/white"
		android:paddingRight="2dip">

		<LinearLayout style="@style/TitleBar" android:background="@drawable/img_signin_banner"
			android:gravity="right">

			<TextView android:text="" android:id="@+id/textView1"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/white" android:textSize="20sp"
				android:paddingTop="10dip" android:paddingRight="10dip" />
		</LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="match_parent" android:orientation="vertical"
			android:background="@color/back_gray">
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnTodayDeal" android:onClick="onClickTodayDeal">
				<TextView android:layout_width="wrap_content" android:text="Today's Deal"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>
			<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
				android:layout_width="fill_parent" android:layout_height="0.5dp" />
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnRecommendation"
				android:onClick="onClickRecommendation">
				<TextView android:layout_width="wrap_content" android:text="Your Recommendations"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>
			<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
				android:layout_width="fill_parent" android:layout_height="0.5dp" />
			<LinearLayout android:orientation="horizontal"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnEvent">
				<TextView android:layout_width="wrap_content" android:text="Events"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
				<LinearLayout android:orientation="vertical"
					android:layout_height="wrap_content" android:layout_width="match_parent"
					android:gravity="right" android:paddingRight="10dip">
					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/imgEvent"/>
				</LinearLayout>
			</LinearLayout>
			<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
				android:layout_width="fill_parent" android:layout_height="0.5dp" />
			<LinearLayout android:orientation="horizontal"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnSavedSearch" android:onClick="onClickSavedSearch">
				<TextView android:layout_width="wrap_content" android:text="Saved Searches" 
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
				<LinearLayout android:orientation="vertical"
					android:layout_height="wrap_content" android:layout_width="match_parent"
					android:gravity="right" android:paddingRight="10dip">
					<ImageView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/imgSavedSearch"/>
				</LinearLayout>


			</LinearLayout>
			<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
				android:layout_width="fill_parent" android:layout_height="0.5dp" />
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnFullName">
				<TextView android:layout_width="wrap_content" android:text="Reminders"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>
			<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
				android:layout_width="fill_parent" android:layout_height="0.5dp" />
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnSearchPeople" android:onClick="onClickFindPeople">
				<TextView android:layout_width="wrap_content" android:text="Find People"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>

			<View android:id="@+id/View01" android:layout_height="0.5dp"
				android:background="@drawable/gradient_bg" android:layout_width="fill_parent" />
			<View android:id="@+id/divider" android:background="@android:color/transparent"
				android:layout_width="fill_parent" android:layout_height="100dp" />
			<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
				android:layout_width="fill_parent" android:layout_height="0.5dp" />
			<LinearLayout android:orientation="vertical"
				android:gravity="bottom" android:layout_height="wrap_content"
				android:paddingBottom="10dip" android:layout_width="fill_parent"
				android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnFullName">
				<TextView android:layout_width="wrap_content" android:text="Help"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnFullName">
				<TextView android:layout_width="wrap_content" android:text="About"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>
			<LinearLayout android:orientation="vertical"
				android:layout_height="wrap_content" android:paddingBottom="10dip"
				android:layout_width="fill_parent" android:background="@drawable/list_select_bg_blue_slide"
				android:clickable="true" android:paddingTop="10dip"
				android:paddingLeft="10dip" android:id="@+id/lnFullName">
				<TextView android:layout_width="wrap_content" android:text="Provide App Feedback"
					android:textColor="@color/white" android:textSize="18sp"
					android:layout_height="wrap_content" android:id="@+id/textView2" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_weight="70" android:background="@drawable/img_bg"
		android:id="@+id/lnStartPanel">

		<LinearLayout style="@style/TitleBar" android:background="@drawable/img1">
			<ImageButton style="@style/TitleBarAction"
				android:contentDescription="@string/description_about" android:src="@drawable/icn_slide_menu"
				android:id="@+id/btnSlideBack" />

		</LinearLayout>
		<LinearLayout android:paddingTop="6dip"
			android:background="@color/back_gray" android:orientation="horizontal"
			android:layout_height="wrap_content" android:layout_width="fill_parent">
			<ImageView android:paddingTop="2dip" android:layout_height="wrap_content"
				android:src="@drawable/icn_user_online" android:id="@+id/imageView1"
				android:layout_width="wrap_content" />

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:text="Prageeth Nuwan Gangabada"
				android:textSize="24sp" android:textColor="@color/white"
				android:paddingLeft="6dip" android:singleLine="true" android:id="@+id/txtUserFullName"/>

		</LinearLayout>
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="100dip" android:background="@color/back_gray"
			android:orientation="horizontal" android:padding="5dip">

			<!-- ListRow Left sied Thumbnail image -->
			<LinearLayout android:id="@+id/thumbnail"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:padding="3dip" android:layout_alignParentLeft="true"
				android:background="@drawable/image_background"
				android:layout_marginRight="5dip">

				<ImageView android:layout_width="80dip" android:layout_height="90dip"
					android:src="@drawable/img" android:id="@+id/imgUserImg"/>

			</LinearLayout>


		</RelativeLayout>
		<LinearLayout android:paddingBottom="10dip"
			android:paddingTop="6dip" android:background="@color/back_gray"
			android:orientation="horizontal" android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<ImageView android:layout_height="wrap_content"
				android:src="@drawable/icn_location" android:layout_width="wrap_content" />

			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:textSize="14sp"
				android:text="Kandy,Central province,Sri Lanka" android:textColor="@color/white"
				android:paddingLeft="6dip" android:singleLine="true" android:id="@+id/txtUserLoc"/>

		</LinearLayout>
		<View android:id="@+id/divider" android:background="@drawable/gradient_bg"
			android:layout_width="fill_parent" android:layout_height="6dp" />
	</LinearLayout>

</LinearLayout>
