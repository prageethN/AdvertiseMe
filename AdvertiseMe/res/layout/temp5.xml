<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="match_parent"
	android:layout_height="wrap_content" android:background="@color/white">

	<LinearLayout android:id="@+id/thumbnail"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:padding="3dip" 
		android:background="@drawable/image_background"
		android:layout_marginLeft="5dip" >

		<ImageView android:id="@+id/list_image"
			android:layout_width="50dip" android:layout_height="50dip"
			android:src="@drawable/img" />

	</LinearLayout>
	<TableLayout android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TableRow android:layout_width="match_parent" android:orientation="horizontal"
			android:layout_height="match_parent" android:weightSum="100">
			<LinearLayout android:id="@+id/priceDetail"
				android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="100">
			<TextView android:id="@+id/text1" android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Geometry and text drawn with this style will be both filled,Geometry and text drawn with this style will be both filled,Geometry and text drawn with this style will be both filled,Geometry and text drawn with this style will be both filled"
				android:textColor="@color/back_gray" android:textSize="12sp"
				android:singleLine="false" android:lines="5" android:maxLines="5" />
		</LinearLayout>
			<LinearLayout android:id="@+id/priceDetail"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:orientation="vertical" android:padding="3dip"
				android:layout_alignParentRight="true" android:layout_marginLeft="5dip"
				android:layout_toRightOf="@+id/text1" android:gravity="center"
				>
				<TextView android:id="@+id/text4" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:background="@drawable/img_deal_bg"
					android:layout_alignParentRight="true" android:text="72% Off"
					android:gravity="right" android:textSize="10sp" android:textColor="@color/back_gray" />
				<!-- Seller feedback -->
				<TextView android:id="@+id/text2" android:layout_width="match_parent"
					android:layout_height="wrap_content" android:textColor="@color/back_gray"
					android:textSize="10sp" android:layout_marginTop="1dip"
					android:layout_alignParentRight="true" android:text="LKR 21,000" />

				<TextView android:id="@+id/text3" android:layout_width="match_parent"
					android:layout_height="wrap_content" android:textColor="@color/back_gray"
					android:textSize="10sp" android:layout_marginTop="1dip"
					android:text="LKR 15,000" />
			</LinearLayout>
		</TableRow>
	</TableLayout>
</LinearLayout>