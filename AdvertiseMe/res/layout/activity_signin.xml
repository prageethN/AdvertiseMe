<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="match_parent" android:background="@drawable/bg_login">


	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:paddingTop="100px" android:paddingLeft="10dip"
		android:paddingRight="10dip">
		<TextView android:text="AdvertiseMe Name" android:id="@+id/textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:textSize="25px"
			android:textStyle="bold" />

	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:paddingTop="5dip" android:paddingLeft="8dip"
		android:paddingRight="10dip" android:paddingBottom="5dip">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="45dip" android:background="@drawable/back_username"
			android:clickable="true">

			<EditText android:layout_height="match_parent"
				android:layout_width="match_parent" android:background="@color/white"
				android:layout_margin="5dip" android:id="@+id/txtUserName" />
		</LinearLayout>

	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:paddingTop="10px" android:paddingLeft="10dip"
		android:paddingRight="10dip">
		<TextView android:text="Password" android:id="@+id/textView1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/white" android:textSize="25px"
			android:textStyle="bold" />

	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:paddingTop="5dip" android:paddingLeft="8dip"
		android:paddingRight="10dip" android:paddingBottom="5dip">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="45dip" android:background="@drawable/back_password">

			<EditText android:layout_height="match_parent"
				android:layout_width="match_parent" android:background="@color/white"
				android:layout_margin="5dip" android:id="@+id/txtPassword" android:password="true"/>
		</LinearLayout>

	</LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:paddingTop="10px" android:paddingLeft="10dip"
		android:paddingRight="10dip" android:gravity="right"
		android:paddingBottom="30dip">
		<Button android:background="@drawable/bg_btn_signin" android:text="Sign in"
			android:layout_width="100dip" android:layout_height="wrap_content"
			android:textColor="@color/white" android:id="@+id/btnSignIn"/>

	</LinearLayout>
	<RelativeLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:gravity="bottom">
		<LinearLayout android:orientation="vertical" android:id="@+id/linkToRegister"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:gravity="center" android:background="@drawable/bg_register" android:layout_margin="10dip" android:clickable="true" >
			<TextView android:layout_width="wrap_content"
				android:text="Still not a member? Join Here" android:layout_height="wrap_content"
				android:textSize="18sp" android:textColor="@color/white"
				android:clickable="true" />
		</LinearLayout>
	</RelativeLayout>
	
</LinearLayout>
